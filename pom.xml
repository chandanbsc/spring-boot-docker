<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	
	<parent>
		<groupId>org.springframework.boot</groupId>
		<artifactId>spring-boot-starter-parent</artifactId>
		<version>2.2.7.RELEASE</version>
		<relativePath/> <!-- lookup parent from repository -->
	</parent>
	
	<groupId>com.example</groupId>
	<artifactId>spring-boot-docker</artifactId>
	<version>0.1.1-SNAPSHOT</version>
	<name>spring-boot-docker</name>
	<packaging>jar</packaging>
	
	<description>
		Demo project for Spring Boot
		Includes kubernetes yml file creation
		Includes helm chart creation
	</description>
	
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
		<docker.user>chandanbsc</docker.user>
		<jkube.version>1.5.1</jkube.version>
	</properties>
	
	<dependencies>
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-web</artifactId>
		</dependency>

		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-test</artifactId>
		</dependency>

		<dependency>
			<groupId>org.jolokia</groupId>
			<artifactId>jolokia-core</artifactId>
		</dependency>
	</dependencies>

	<build>
		<plugins>

			<plugin>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-maven-plugin</artifactId>
			</plugin>
			
			<plugin>
				<groupId>org.eclipse.jkube</groupId>
				<artifactId>kubernetes-maven-plugin</artifactId>
				<version>${jkube.version}</version>
			</plugin>

		</plugins>
	</build>

	<profiles>
		<profile>
			<id>dev</id>
			<properties>
				<from.image>openjdk:17-jdk-alpine</from.image>
				<helm_namespace>${project.artifactId}</helm_namespace>
			</properties>
			<build>
				<plugins>
					<plugin>
						<groupId>org.eclipse.jkube</groupId>
						<artifactId>kubernetes-maven-plugin</artifactId>
						<version>${jkube.version}</version>
						<configuration>
							<images>
								<image>
									<name>${docker.user}/${project.artifactId}-${project.activeProfiles[0].id}:${project.version}</name>
									<build>
										<contextDir>${project.basedir}/src/main/docker/spdDockerFile</contextDir>
										<assembly>
											<name>target</name>
										</assembly>
									</build>
								</image>
							</images>
							<resources>
								<labels>
									<all>
										<testProject>spring-boot-yaml-label-all</testProject>
									</all>
								</labels>
							</resources>
							<generator>
								<config>
									<spring-boot>
										<color>always</color>
									</spring-boot>
								</config>
							</generator>
							<enricher>
								<config>
									<jkube-controller>
										<name>${project.artifactId}-jkc</name>
									</jkube-controller>
								</config>
							</enricher>
							<helm>
								<chart>sp-boot-doc-helm</chart>
								<keywords>spring,boot,docker,k8s,helm</keywords>
							</helm>
						</configuration>
						<executions>
							<execution>
								<goals>
									<goal>resource</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

</project>

